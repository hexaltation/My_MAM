<!DOCTYPE html>
<html>
    <head>
        <title>My_MAM</title>
        <link rel="icon" type="image/png" href="/favicon.ico" />
        <link rel='stylesheet' href='/stylesheets/style.css'/>
        <link href="//vjs.zencdn.net/5.19/video-js.min.css" rel="stylesheet">
        <script src="//vjs.zencdn.net/5.19/video.min.js"></script>
    </head>
    <body>
     <div class="general">
        <div class="title">
            <h1>Medias</h1>
        </div>
        <div class="navbar">
            <a href='/ingest'>ingest</a>
            <a href='/logout'>logout</a>
        </div>
        <div class="instructions">
            <p>Welcome to list of medias</p>
            <p>To play a clip, click on is thumbnail or on &lt;click here&gt; area</p>
        </div>
        <div class="alert">
            <%= alert %>
        </div>
        <% if (medias.length>0) { %>
            <div class="table">
        <% for(var i=0; i<(medias.length/4); i++) {%>
            <div class="row">
            <% for(var j=i*4; j<(i*4+4); j++) {%>
                <% if (j<medias.length) { %>
                    <div class="cell">
                        <div class="media-name">
                            <%= medias[j].originalname %>
                            <input class="checkBox" type="checkbox" id="<%= medias[j].filename %>" name="<%= medias[j].originalname %>"><br>
                        </div>
                        <img class="bg-img" id= "<%= medias[j].filename %>" src="/src/Thumbnails/<%= medias[j].filename %>.png" onerror="this.src='/img/default_thumb.png'" alt="<click here>">
                    </div>
                <% } %>
            <% } %>
            </div> 
        <% } %>
            </div>
            <div class="table-buttons">
                <button type="button" id="SelectAll">Select All</button>
                <button type="button" id="DeselectAll">Deselect All</button>
                <button type="button" id="AddSelected">Add Selected to project</button>
            </div>
        <% } %>
        <video
            id="my-player"
            class="video-js"
            controls
            preload="none"
            poster="/player/default.png"
            data-setup='{}'>
            <source id="video_asset" src="/player/default.mp4" type="video/mp4"></source>
            <p class="vjs-no-js">
                To view this video please enable JavaScript, and consider upgrading to a web browser that
                <a href="http://videojs.com/html5-video-support/" target="_blank">
                supports HTML5 video
                </a>
            </p>
        </video>
        <div class="project">
            <div class="project-title">Project</div>
            <dl class="project-list"></dl>
        </div>
        <div class="project-buttons">
            <input type="text" id="BinName"></input>
            <button type="button" id="AddBin">Add Bin</button><br>
            <button type="button" id="DownloadProject">Download Project</button>
        </div>
        <div class="footer">
            Conception &#x26E9; Hexaltation
        </div>
        </div>
        <script type="text/javascript" src="/jquery/jquery.min.js"></script>
        <script type="text/javascript" src="/javascripts/media_selector.js"></script>
    </body>
</html>

